{{#admin-navigation-bar addOption=true navColumn=10 page='categories'}}{{/admin-navigation-bar}}

<div class="container" style="margin-top:30px;">
  {{#admin-notification visible=model.notification.visible classStyle=model.notification.classStyle text=model.notification.text}}{{/admin-notification}}

  <div class="box_shadow administration_fields">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label class="input_title">Category name</label>
          {{input type="text" class="form-control input_fields" value=model.category.name}}
        </div>
      </div>
      <div class="col-md-6" style="padding-top:25px;">
        {{#if model.finished}}
          <button {{action 'cancel'}} class="btn cancel_button pull-right">Back</button>
        {{else}}
          <button {{action 'editItem'}} class="btn button pull-right">Edit category</button>
          <button {{action 'cancel'}} class="btn cancel_button pull-right">Cancel</button>
        {{/if}}
      </div>
    </div>
  </div>
</div>

{{outlet}}