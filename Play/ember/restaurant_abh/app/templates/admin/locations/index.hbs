{{#admin-navigation-bar addOption=true navColumn=10 page='locations' filter=model.filter  searchTextChanged='searchTextChanged'}}{{/admin-navigation-bar}}

<div class="container" style="margin-top:30px;">
  {{#admin-notification visible=model.notification.visible classStyle=model.notification.classStyle text=model.notification.text}}{{/admin-notification}}

  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered table-hover box_shadow administration_table">
        <thead>
          <tr>
            <td class="col-md-11">Name</td>
            <td class="col-md-1"></td>
          </tr>
        </thead>
        <tbody>
          {{#each model.listItems as |item|}}
            <tr>
              <td>{{item.name}}</td>
              <td class="options">
                <span {{action 'editItem' item.id}} class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <span {{action 'deleteItem' item.id}} class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              </td>
            </tr>
          {{else}}
            <tr>
              <td>No locations found!</td>
              <td class="options"></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <nav class="restaurants_nav_pagination">
    <ul class="pagination">
      {{#each model.itemPages as |pagination|}}
        <li><a href="javascript:void(0);" {{action 'changePage' pagination}}>{{pagination}}</a></li>
      {{/each}}
    </ul>
  </nav>
</div>

{{outlet}}
