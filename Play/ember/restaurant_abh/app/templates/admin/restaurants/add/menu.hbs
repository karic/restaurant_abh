<div class="container" style="margin-top:25px;">
  {{#admin-notification visible=model.notification.visible classStyle=model.notification.classStyle text=model.notification.text}}{{/admin-notification}}
</div>

{{outlet}}

{{#admin-restaurants-add-tabs displayAdditionalOptions=true idRestaurant=model.idRestaurant}}{{/admin-restaurants-add-tabs}}

<div class="container">

  <div class="box_shadow administration_fields">
    <div class="row" style="margin-bottom:50px;">
      <div class="col-md-12">
        <div class="btn-group admin_menu_buttons_type" role="group" style="margin-bottom:15px;">
          <button type="button" class="menu_title_Breakfast menu_button active" {{action 'changeType' 'Breakfast'}}>Breakfast</button>
          <button type="button" class="menu_title_Lunch btn menu_button" {{action 'changeType' 'Lunch'}}>Lunch</button>
          <button type="button" class="menu_title_Dinner btn menu_button" {{action 'changeType' 'Dinner'}}>Dinner</button>
        </div>
      </div>
    </div>

    <div class="row" style="margin-bottom:20px;">
      <div class="col-md-3"><strong>Name</strong></div>
      <div class="col-md-6"><strong>Description</strong></div>
      <div class="col-md-2"><strong>Price</strong></div>
      <div class="col-md-1"></div>
    </div>

    {{#each model.menuitems as |menuitem|}}
      {{#admin-restaurant-menu menuitem=menuitem deleteItem='deleteItem' editItem='editItem'}}{{/admin-restaurant-menu}}
    {{/each}}

    <div class="row administration_menu_table_div_row" style="margin-top:20px;">
      <div class="col-md-3">{{input type="text" class="form-control input_fields" value=model.newMenuItem.name placeholder="Name"}}</div>
      <div class="col-md-7">{{input type="text" class="form-control input_fields" value=model.newMenuItem.description placeholder="Description"}}</div>

      <div class="col-md-1">{{input type="text" class="form-control input_fields" value=model.newMenuItem.price  placeholder="$"}}</div>
      <div class="col-md-1"><button {{action 'addItem'}} type="button" class="admin_menu_buttons_add">Add</button></div>
    </div>

    {{#if model.edited}}
      <div class="row">
        <div style="margin-right:15px; margin-top:40px;">
          <button {{action 'saveChanges'}} class="btn button pull-right">Save</button>
          <button {{action 'cancel'}} class="btn cancel_button pull-right">Cancel</button>
        </div>
      </div>
    {{/if}}
  </div>
</div>