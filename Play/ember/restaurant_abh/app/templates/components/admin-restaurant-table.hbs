{{#if editable}}
  <div class="row administration_menu_table_div_row">
    <div class="col-md-4">{{input type="text" class="form-control input_fields" value=tableitem.sittingPlaces}}</div>
    <div class="col-md-7">{{#restaurant-sitting-place value=tableitem.sittingPlaces}}{{/restaurant-sitting-place}}</div>
    <div class="col-md-1">
      <button {{action 'editItem' tableitem.id}} type="button" class="admin_menu_buttons_add">Edit</button>
    </div>
  </div>
{{else}}
  <div class="row administration_menu_table_div_row">
    <div class="col-md-4"><strong style="margin-right:15px;">{{tableitem.sittingPlaces}}</strong> (Table number: {{tableitem.id}})</div>
    <div class="col-md-7">{{#restaurant-sitting-place value=tableitem.sittingPlaces}}{{/restaurant-sitting-place}}</div>
    <div class="col-md-1 administration_restaurant_menu_table_options">
      <span {{action 'edit'}} class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <span {{action 'deleteItem' tableitem.id}} class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    </div>
  </div>
{{/if}}

