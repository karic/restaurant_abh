<div class="box_shadow restaurant_data_container" style="margin-bottom:65px;">
  <div class="row">
    <div class="col-md-2">
      <div class="complete_reservation_restaurant_image" style="background-image:url('{{restaurantImageFilename}}');"></div>
    </div>
    <div class="col-md-10 complete_reservation_restaurant_details">
      <div class="title">RESTAURANT</div>
      <div class="name">{{restaurantName}}</div>

      <div class="row">
        <div class="col-md-2">
          <div class="title">GUESTS</div>
          <div class="details">{{people}}</div>
        </div>
        <div class="col-md-3">
          <div class="title">DATE</div>
          <div class="details">{{date}}</div>
        </div>
        <div class="col-md-2">
          <div class="title">TIME</div>
          <div class="details">{{hour}}</div>
        </div>
      </div>
    </div>
  </div>

  <div class="availability_text">
    Availability on {{date}} around {{hour}} for {{people}}:
  </div>

  <div class="tables_left">
    <span class="glyphicon glyphicon-info-sign" aria-hidden="true" style="padding-right:3px; color:#000;"></span> {{tablesAvailable}} tables left
  </div>

  <h4 class="select_time_best_fits">Select the best time that fits you:</h4>

  <div class="reservation_choose_time">
    {{#each bestTime as |time|}}
      <a href="javascript:void(0);" {{action 'proceedToReservationComplete' time idRestaurant restaurantName restaurantImageFilename}}>{{time}}</a>
    {{/each}}
  </div>
</div>