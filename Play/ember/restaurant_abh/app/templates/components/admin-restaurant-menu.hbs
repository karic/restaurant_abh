{{#if editable}}
  <div class="row administration_menu_table_div_row">
    <div class="col-md-3">{{input type="text" class="form-control input_fields" value=menuitem.name}}</div>
    <div class="col-md-7">{{input type="text" class="form-control input_fields" value=menuitem.description}}</div>
    <div class="col-md-1">{{input type="text" class="form-control input_fields" value=menuitem.price}}</div>
    <div class="col-md-1">
      <button {{action 'editItem' menuitem.id}} type="button" class="admin_menu_buttons_add">Edit</button>
    </div>
  </div>
{{else}}
  <div class="row administration_menu_table_div_row">
    <div class="col-md-3">{{menuitem.name}}</div>
    <div class="col-md-7">{{menuitem.description}}</div>
    <div class="col-md-1">{{menuitem.price}}$</div>
    <div class="col-md-1 administration_restaurant_menu_table_options">
      <span {{action 'edit'}} class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <span {{action 'deleteItem' menuitem.id}} class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    </div>
  </div>
{{/if}}

