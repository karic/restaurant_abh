{{#navigation-bar styleClass='navigation_black'}}{{/navigation-bar}}

<div class="container">
  <div class="row">
    <div class="col-md-6 col-center-block login_register_container">
      <h1 class="title">Forgot password</h1>

      <form data-toggle="validator">
        <div class="form-group">
          {{input type="email" class="form-control input_fields" value=user.email placeholder="Email"}}
        </div>

        <div class="form-group loginNotifications">
          <div class="alert alert-danger" role="alert">
            <div class="alertText"></div>
          </div>
        </div>

        <button {{action 'createResetPasswordToken'}} class="btn button">Submit</button>
      </form>
     </div>
  </div>
</div>